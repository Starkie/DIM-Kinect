<Window x:Class="Dim.Kinect.Excercise1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dim.Kinect.Excercise1"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Margin="0,0,0,-157">
        <Image x:Name="KinectImage" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="640" Canvas.Left="10" Canvas.Top="10" />
        <TextBlock x:Name="ErrorText" HorizontalAlignment="Left" Height="305" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="551" Visibility="Hidden" FontSize="48" Canvas.Left="127" Canvas.Top="93" />
        <ComboBox x:Name="selectedStream" Canvas.Left="655" Canvas.Top="150" Width="120">
            <ComboBoxItem Name="colorStreamOption">Color Stream</ComboBoxItem>
            <ComboBoxItem Name="depthStreamOption">Depth Stream</ComboBoxItem>
        </ComboBox>
    </Canvas>
</Window>